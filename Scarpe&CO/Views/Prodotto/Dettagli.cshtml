@model Scarpe_CO.Models.Prodotto
@{
    ViewBag.Title = "Dettagli";
}


<h1 class="mt-3 display-1">Dettagli</h1>
<div class="container">
    <div class="row">
        <div class="col">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1" ></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2" ></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Model.ImmagineCopertina" alt="First slide">
                    </div>
                    <div class="carousel-item ">
                        <img class="d-block w-100" src="@Model.ImmagineDue" alt="Second slide">
                    </div>
                    <div class="carousel-item ">
                        <img class="d-block w-100" src="@Model.ImmagineTre" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon text-warning" aria-hidden="true"></span>
                    <span class="sr-only text-warning">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon text-warning" aria-hidden="true"></span>
                    <span class="sr-only text-warning">Next</span>
                </a>
            </div>
        </div>
        <div class="col">
            <div class="row">
                <div class="col">
                    <h2 class="display-2 bg-info text-white">@Model.Nome</h2>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h3>Prezzo: @Model.Prezzo €</h3>
                </div>
            </div>
            <div class="row">
                <div class="col d-flex flex-column" >
                    <h4>Dettagli</h4>
                    <p>@Model.Descrizione</p>
                </div>
            </div>
        </div>
    </div>
</div>




